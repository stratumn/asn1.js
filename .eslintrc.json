{
  "parser": "babel-eslint",
  "extends": ["prettier", "prettier/standard"],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "jest": true
  },
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "object-shorthand": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "overrides": [
    {
      "files": "*.test.js",
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
